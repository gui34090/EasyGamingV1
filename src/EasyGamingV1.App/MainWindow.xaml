<Window
    x:Class="EasyGamingV1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="EasyGamingV1"
    Height="540" Width="920"
    ExtendsContentIntoTitleBar="True">
    <Grid Background="{ThemeResource SystemControlAcrylicWindowBrush}">
        <StackPanel Spacing="12" Padding="16">
            <TextBlock Text="EasyGamingV1 (Portable)" FontSize="20" FontWeight="SemiBold"/>
            <TextBlock Text="Overlay is SAFE (desktop-only). No injection/hook/driver." Opacity="0.7"/>
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button x:Name="ToggleOverlayBtn" Click="ToggleOverlayBtn_Click" Content="Toggle Overlay (Safe Mode)"/>
                <Button x:Name="AntiCaptureBtn" Click="AntiCaptureBtn_Click" Content="Anti-capture: Off"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button x:Name="OpenLogsBtn" Click="OpenLogsBtn_Click" Content="Open Logs Folder"/>
                <Button x:Name="ValidateDataBtn" Click="ValidateDataBtn_Click" Content="Validate Game Profiles"/>
            </StackPanel>
            <Border Padding="12" BorderBrush="#22FFFFFF" BorderThickness="1" CornerRadius="8">
                <StackPanel Spacing="8">
                    <TextBlock Text="Converter (M1)" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="DPI:" VerticalAlignment="Center"/>
                        <TextBox x:Name="DpiBox" Width="100" Text="800"/>
                        <TextBlock Text="Sensitivity:" VerticalAlignment="Center"/>
                        <TextBox x:Name="SensBox" Width="100" Text="0.5"/>
                        <Button Click="ComputeCm360_Click" Content="cm / 360Â°"/>
                        <TextBlock x:Name="Cm360Out" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <TextBlock x:Name="StatusText" Opacity="0.8"/>
        </StackPanel>
    </Grid>
</Window>
